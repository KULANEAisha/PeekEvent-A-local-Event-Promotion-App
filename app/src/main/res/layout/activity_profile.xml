<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity"
    android:background="#F5F5F5">

    <!-- Header Section -->
    <RelativeLayout
        android:id="@+id/header_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/header_gradient"
        android:elevation="6dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="40dp"
        android:paddingBottom="36dp">

        <TextView
            android:id="@+id/header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Profile"
            android:textSize="40sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.05"
            android:textColor="@android:color/white" />
        <ImageView
            android:id="@+id/menu_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_more_vert_36"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:contentDescription="Menu"
            android:padding="8dp" />

    </RelativeLayout>

    <!-- Profile Info Section with Avatar and Text Side by Side -->
    <LinearLayout
        android:id="@+id/profile_container"
        android:layout_below="@id/header_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="24dp"
        android:background="@android:color/white"
        android:layout_margin="16dp"
        android:elevation="2dp"
        android:gravity="center_vertical"
        android:layout_centerHorizontal="true">

        <!-- Profile Image on the Left -->
        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/profile"
            android:background="@drawable/circle_bg"
            android:padding="4dp"
            android:layout_marginEnd="16dp" />

        <!-- Profile Info on the Right -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="John Doe"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"
                android:textColor="#333" />

            <TextView
                android:id="@+id/profile_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="johndoe@example.com"
                android:textSize="16sp"
                android:layout_marginBottom="4dp"
                android:textColor="#666" />

            <TextView
                android:id="@+id/profile_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+254 700 000 000"
                android:textSize="16sp"
                android:layout_marginBottom="4dp"
                android:textColor="#666" />

            <TextView
                android:id="@+id/profile_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Joined on: 01/01/2024"
                android:textSize="14sp"
                android:textColor="#888" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/event_toggle_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_container"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="12dp"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/btn_my_events"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="My Events"
            android:backgroundTint="@color/lavender"
            android:textColor="@android:color/white"/>

        <Button
            android:id="@+id/btn_rsvped_events"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="RSVPâ€™d Events"
            android:backgroundTint="@android:color/darker_gray"
            android:textColor="@android:color/white"
            android:layout_marginStart="8dp"/>
    </LinearLayout>



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/user_events_recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/profile_container"
        android:layout_above="@id/bottom_nav"
        android:layout_marginTop="37dp"
        android:layout_marginBottom="11dp"
        android:padding="16dp"
        tools:listitem="@layout/item_event_card" />


    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        app:menu="@menu/bottom_nav_menu"
        app:labelVisibilityMode="labeled"
        app:itemIconTint="@color/selector_nav_item_color"
        app:itemTextColor="@color/selector_nav_item_color" />
</RelativeLayout>
